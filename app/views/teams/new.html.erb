<h1>Create a New Team</h1>

<%= form_with model: @team, local: true, class: "form-container" do |form| %>
  <!-- Team Name Section -->
  <div class="form-group">
    <%= form.label :name, "Team Name", class: "form-label" %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>

  <!-- Team Description Section -->
  <div class="form-group">
    <%= form.label :description, "Team Description", class: "form-label" %>
    <%= form.text_area :description, required: true, class: "form-control" %>
  </div>

  <h3>Team Members</h3>
  <%= form.label :members, "Select members to add to the team", class: "form-label" %>

  <!-- Members Dropdown -->
  <% if @users.any? %>
    <div class="form-group">
      <%= select_tag 'members[]', options_from_collection_for_select(@users, :id, :email), multiple: true, class: "form-control" %>
    </div>
  <% else %>
    <p>No users available to add to the team.</p>
  <% end %>

  <!-- Owner Dropdown -->
  <h3>Team Owner</h3>
  <% if @users.any? %>
    <div class="form-group">
      <%= form.label :owner_id, "Select the team owner", class: "form-label" %>
      <%= form.select :owner_id, options_from_collection_for_select(@users, :id, :email), prompt: "Select an owner", class: "form-control" %>
    </div>
  <% else %>
    <p>No users available to assign as owner.</p>
  <% end %>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Create Team", class: "btn btn-primary" %>
  </div>
<% end %>


<!-- Additional Styling -->
<style>
  .form-container {
    width: 80%;
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .btn {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .btn:hover {
    background-color: #0056b3;
  }
</style>
